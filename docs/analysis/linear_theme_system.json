{
  "design_system": {
    "name": "Linear Design System",
    "version": "2025",
    "description": "Linear의 미니멀하고 전문적인 디자인 시스템을 기반으로 한 테마 구성",
    "brand_identity": {
      "primary_color": "#5E6AD2",
      "description": "미묘하고 탈색된 블루 - 밝고 어두운 배경에 모두 적합",
      "wordmark_usage": "단색 사용 권장",
      "company_name": "Linear (대문자 L로 시작하는 단일 단어)"
    },
    "core_principles": [
      "minimalism", 
      "clarity", 
      "performance", 
      "accessibility",
      "linear_flow"
    ]
  },
  "theme_generation_system": {
    "color_space": "LCH",
    "description": "인간의 눈에 가장 가까운 색공간으로, 일관되게 좋은 테마 생성 가능",
    "core_variables": {
      "base_color": {
        "type": "LCH",
        "description": "기본 배경색과 표면 색상의 베이스",
        "example": "[95.07617314910061, 2.1856276247566773, 265.9705972968138, 1]"
      },
      "accent_color": {
        "type": "LCH", 
        "description": "강조색상 - 버튼, 링크, 활성 요소",
        "example": "[43.717135811988086, 99.37386079300107, 307.12305463765506, 1]"
      },
      "contrast": {
        "type": "number",
        "range": "0-100",
        "description": "테마의 대비도 - 접근성을 위한 고대비 테마 지원",
        "default": 30,
        "high_contrast": 100
      }
    },
    "generated_tokens": {
      "surfaces": {
        "background": "자동 생성",
        "foreground": "자동 생성", 
        "panels": "자동 생성",
        "dialogs": "자동 생성",
        "modals": "자동 생성"
      },
      "text_colors": "자동 생성",
      "icon_colors": "자동 생성",
      "control_colors": "자동 생성"
    }
  },
  "popular_themes": {
    "light_themes": [
      {
        "name": "Default Light",
        "base": "[95, 2, 266, 1]",
        "accent": "[44, 99, 307, 1]",
        "contrast": 30,
        "description": "Linear의 기본 라이트 테마"
      },
      {
        "name": "Catppuccin Latte",
        "base": "[95.07617314910061, 2.1856276247566773, 265.9705972968138, 1]",
        "accent": "[43.717135811988086, 99.37386079300107, 307.12305463765506, 1]",
        "contrast": 30
      },
      {
        "name": "GitHub Light",
        "base": "[98, 0, 0, 1]",
        "accent": "[40, 80, 210, 1]",
        "contrast": 35
      }
    ],
    "dark_themes": [
      {
        "name": "Default Dark", 
        "base": "[18, 11, 280, 1]",
        "accent": "[72, 40, 311, 1]",
        "contrast": 30,
        "description": "Linear의 기본 다크 테마"
      },
      {
        "name": "Catppuccin Mocha",
        "base": "[16.02115422223583, 13.102236978320558, 282.51213623981425, 1]",
        "accent": "[71.7932136171783, 46.50946588741101, 305.26693753987405, 1]",

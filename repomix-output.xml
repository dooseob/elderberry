     */
    createRuleFromPattern(pattern) {
        return {
            id: `AUTO_${Date.now()}_${Math.random().toString(36).substr(2, 9)}`,
            generated_from: pattern,
            category: 'auto_generated',
            severity: 'medium',
            title: `ìë™ ìƒì„± ê·œì¹™: ${pattern.file_type} íŒŒì¼ì—ì„œ ${pattern.rule_id} íŒ¨í„´`,

        if (date == null) return false;
        
        LocalDate today = today();
        LocalDate weekStart = today.with(DayOfWeek.MONDAY);
        LocalDate weekEnd = today.with(DayOfWeek.SUNDAY);
        
        return !date.isBefore(weekStart) && !date.isAfter(weekEnd);
    }


{
  "designSystem": {
    "name": "Korean E-commerce Platform",
    "description": "Clean, modern Korean e-commerce design system with integrated AI chatbot",
    "version": "1.0.0",
    
    "colors": {
      "primary": {
        "purple": "#6366f1",
        "purpleHover": "#5855eb",
        "purpleDark": "#4f46e5"
      },
      "accent": {
        "red": "#ef4444",
        "redBright": "#f87171"
      },
      "neutral": {
        "white": "#ffffff",
        "gray50": "#f9fafb",
        "gray100": "#f3f4f6",
        "gray200": "#e5e7eb",
        "gray300": "#d1d5db",
        "gray400": "#9ca3af",
        "gray500": "#6b7280",
        "gray600": "#4b5563",
        "gray700": "#374151",
        "gray800": "#1f2937",
        "gray900": "#111827",
        "black": "#000000"
      }
    },

    "typography": {
      "fontFamily": {
        "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Noto Sans KR', sans-serif"
      },
      "fontSize": {
        "xs": "12px",
        "sm": "14px",
        "base": "16px",
        "lg": "18px",
        "xl": "20px",
        "2xl": "24px",
        "3xl": "30px",
        "4xl": "36px",
        "5xl": "48px"
      },
      "fontWeight": {
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      }
    },

    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "3xl": "64px",
      "4xl": "96px"
    },

    "borderRadius": {
      "none": "0",
      "sm": "4px",
      "md": "8px",
      "lg": "12px",
      "xl": "16px",
      "full": "9999px"
    },

    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
    },

    "components": {
      "header": {
        "style": "minimal_clean",
        "background": "white",
        "height": "80px",
        "padding": "0 24px",
        "borderBottom": "1px solid #e5e7eb",
        "layout": {
          "logo": {
            "position": "left",
            "fontSize": "36px",
            "fontWeight": "bold",
            "color": "black",
            "letterSpacing": "-0.02em"
          },
          "navigation": {
            "position": "center",
            "items": [
              { "type": "highlight", "style": "blue_text", "text": "비즈라이터" },
              { "type": "highlight", "style": "red_text", "text": "BEST" },
              { "type": "normal", "text": "ALL" },
              { "type": "normal", "text": "NEW" },
              { "type": "normal", "text": "FACE" },
              { "type": "normal", "text": "EYES" },
              { "type": "normal", "text": "LIPS" },
              { "type": "normal", "text": "SET" },
              { "type": "normal", "text": "AI-HEVA" }
            ],
            "spacing": "32px",
            "fontSize": "16px",
            "fontWeight": "medium"
          },
          "actions": {
            "position": "right",
            "items": ["cart", "search"],
            "iconSize": "24px",
            "spacing": "16px"
          }
        }
      },

      "heroSection": {
        "background": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
        "padding": "96px 24px",
        "textAlign": "center",
        "content": {
          "badge": {
            "text": "NEW",
            "background": "#a5b4fc",
            "color": "white",
            "borderRadius": "full",
            "padding": "8px 24px",
            "fontSize": "14px",
            "fontWeight": "medium",
            "marginBottom": "32px"
          },
          "headline": {
            "fontSize": "48px",
            "fontWeight": "bold",
            "color": "white",
            "lineHeight": "1.2",
            "marginBottom": "24px",
            "maxWidth": "800px"
          },
          "description": {
            "fontSize": "18px",
            "color": "rgba(255, 255, 255, 0.9)",
            "lineHeight": "1.6",
            "marginBottom": "48px",
            "maxWidth": "600px"
          },
          "actions": {
            "layout": "horizontal",
            "spacing": "16px",
            "buttons": [
              {
                "type": "primary",
                "background": "#6366f1",
                "color": "white",
                "padding": "16px 32px",
                "borderRadius": "12px",
                "fontSize": "16px",
                "fontWeight": "semibold"
              },
              {
                "type": "secondary",
                "background": "transparent",
                "color": "white",
                "border": "2px solid rgba(255, 255, 255, 0.3)",
                "padding": "16px 32px",
                "borderRadius": "12px",
                "fontSize": "16px",
                "fontWeight": "semibold"
              }
            ]
          }
        }
      },

      "productGrid": {
        "layout": "grid",
        "columns": 5,
        "gap": "24px",
        "padding": "48px 24px",
        "productCard": {
          "background": "white",
          "borderRadius": "12px",
          "overflow": "hidden",
          "shadow": "md",
          "transition": "all 0.2s ease",
          "hover": {
            "transform": "translateY(-4px)",
            "shadow": "lg"
          },
          "image": {
            "aspectRatio": "1:1",
            "objectFit": "cover"
          },
          "content": {
            "padding": "16px",
            "title": {
              "fontSize": "14px",
              "fontWeight": "medium",
              "color": "gray700",
              "marginBottom": "8px",
              "lineClamp": 2
            },
            "price": {
              "fontSize": "16px",
              "fontWeight": "bold",
              "color": "black",
              "marginBottom": "4px"
            },
            "discount": {
              "fontSize": "14px",
              "color": "red",
              "fontWeight": "medium"
            }
          },
          "badges": {
            "sale": {
              "background": "#ef4444",
              "color": "white",
              "fontSize": "12px",
              "fontWeight": "bold",
              "padding": "4px 8px",
              "borderRadius": "4px",
              "position": "absolute",
              "top": "8px",
              "right": "8px"
            }
          }
        }
      },

      "chatbot": {
        "position": "fixed",
        "bottom": "24px",
        "right": "24px",
        "zIndex": 1000,
        "trigger": {
          "width": "56px",
          "height": "56px",
          "borderRadius": "full",
          "background": "#6366f1",
          "color": "white",
          "shadow": "lg",
          "cursor": "pointer",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center",
          "transition": "all 0.2s ease",
          "hover": {
            "transform": "scale(1.05)",
            "background": "#5855eb"
          }
        },
        "popup": {
          "width": "380px",
          "height": "500px",
          "background": "white",
          "borderRadius": "16px",
          "shadow": "xl",
          "border": "1px solid #e5e7eb",
          "position": "absolute",
          "bottom": "72px",
          "right": "0",
          "overflow": "hidden",
          "header": {
            "background": "#6366f1",
            "color": "white",
            "padding": "16px 20px",
            "fontSize": "16px",
            "fontWeight": "semibold",
            "display": "flex",
            "alignItems": "center",
            "justifyContent": "space-between"
          },
          "body": {
            "padding": "20px",
            "height": "calc(100% - 120px)",
            "overflowY": "auto"
          },
          "input": {
            "position": "absolute",
            "bottom": "0",
            "left": "0",
            "right": "0",
            "padding": "16px 20px",
            "background": "white",
            "borderTop": "1px solid #e5e7eb",
            "input": {
              "width": "100%",
              "padding": "12px 16px",
              "border": "1px solid #d1d5db",
              "borderRadius": "24px",
              "fontSize": "14px",
              "outline": "none",
              "focus": {
                "borderColor": "#6366f1"
              }
            }
          }
        }
      },

      "buttons": {
        "primary": {
          "background": "#6366f1",
          "color": "white",
          "border": "none",
          "borderRadius": "8px",
          "padding": "12px 24px",
          "fontSize": "16px",
          "fontWeight": "semibold",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "hover": {
            "background": "#5855eb",
            "transform": "translateY(-1px)"
          }
        },
        "secondary": {
          "background": "transparent",
          "color": "#6366f1",
          "border": "2px solid #6366f1",
          "borderRadius": "8px",
          "padding": "12px 24px",
          "fontSize": "16px",
          "fontWeight": "semibold",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "hover": {
            "background": "#6366f1",
            "color": "white"
          }
        }
      }
    },

    "layout": {
      "maxWidth": "1200px",
      "margin": "0 auto",
      "padding": "0 24px",
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px"
      }
    },

    "animations": {
      "transitions": {
        "fast": "0.15s ease",
        "normal": "0.2s ease",
        "slow": "0.3s ease"
      },
      "hover": {
        "lift": "translateY(-2px)",
        "scale": "scale(1.02)"
      }
    },

    "language": {
      "primary": "ko",
      "textDirection": "ltr",
      "characterSet": "korean_english_mixed"
    }
  }
}
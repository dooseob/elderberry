            }
        }
        
        // ì¬í™œ ì „ë¬¸ì„± ë§¤ì¹­
        if (assessment.getMobilityLevel() != null && assessment.getMobilityLevel() >= 2) {
            if (specializations.contains("rehabilitation")) {

        if (isSpecialtyMatch(coordinator, assessment)) {
            reason.append("ğŸ¯ ì „ë¬¸ ë¶„ì•¼ ì™„ë²½ ë§¤ì¹­: ");
            reason.append(getSpecialtyDescription(coordinator, assessment));
            reason.append("\n");

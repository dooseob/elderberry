# ==========================================
# 엘더베리 프로젝트 - 환경변수 설정 예제
# 실제 사용시 .env 파일로 복사하여 값 설정
# ==========================================

# === 데이터베이스 설정 ===
DB_HOST=localhost
DB_PORT=5432
DB_NAME=elderberry
DB_USERNAME=elderberry
DB_PASSWORD=elderberry123!

# H2 데이터베이스 (개발용)
H2_DB_PATH=./data/elderberry
H2_CONSOLE_ENABLED=true

# === Redis 설정 ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# === JWT 설정 ===
JWT_SECRET=elderberry-jwt-secret-key-2025-change-this-in-production
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# === Spring Boot 설정 ===
SPRING_PROFILES_ACTIVE=development
SERVER_PORT=8080

# === 외부 API 설정 ===
PUBLIC_DATA_API_KEY=your-public-data-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# === 파일 업로드 설정 ===
UPLOAD_MAX_FILE_SIZE=10MB
UPLOAD_MAX_REQUEST_SIZE=10MB
UPLOAD_PATH=./uploads

# === 로깅 설정 ===
LOG_LEVEL=info
LOG_PATH=./logs

# === 프론트엔드 설정 ===
VITE_API_BASE_URL=http://localhost:8080/api
VITE_WS_URL=ws://localhost:8080/ws
VITE_APP_TITLE=엘더베리 케어링크

# === Docker 설정 ===
DOCKER_POSTGRES_IMAGE=postgres:17-alpine
DOCKER_REDIS_IMAGE=redis:8-alpine
DOCKER_NODE_VERSION=22

# === 보안 설정 ===
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CSRF_ENABLED=true

# === 모니터링 설정 ===
ACTUATOR_ENDPOINTS_ENABLED=true
HEALTH_CHECK_ENABLED=true